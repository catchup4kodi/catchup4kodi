<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3</defaultcontrol>
    <zorder>2</zorder>
    <coordinates>
        <system>1</system>
        <posx>125</posx>
        <posy>110</posy>
    </coordinates>
    <animation effect="fade" time="250">WindowOpen</animation>
    <animation effect="fade" time="250">WindowClose</animation>
    <controls>
        <control type="image">
            <description>background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1000</width>
            <height>350</height>
            <texture border="40">DialogBack.png</texture>
        </control>
        <control type="image">
            <description>Dialog Header image</description>
            <posx>40</posx>
            <posy>16</posy>
            <width>800</width>
            <height>40</height>
            <texture>dialogheader.png</texture>
        </control>
        <control type="label" id="1">
            <description>header label</description>
            <posx>40</posx>
            <posy>20</posy>
            <width>925</width>
            <height>30</height>
            <font>font13_title</font>
            <label>DUCKPOOL Extension Information</label>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>selected</textcolor>
            <shadowcolor>black</shadowcolor>
        </control>
        <control type="videowindow" id="2">
              <description>AD</description>
              <posx>25</posx>
              <posy>20</posy>
              <width>450</width>
              <height>350</height>
              <visible>Player.Playing</visible>
        </control>
        <control type="image">
              <description>dp_icon</description>
              <posx>25</posx>
              <posy>65 </posy>
              <width>450</width>
              <height>260</height>
              <visible>!Player.Playing</visible>
              <texture>dp_icon.png</texture>
        </control>
        <control type="image">
            <posx>487</posx>
            <posy>55</posy>
            <width>4</width>
            <height>290</height>
            <texture>separator_vertical.png</texture>
        </control>
        <control type="list" id="3">
            <posx>500</posx>
            <posy>67</posy>
            <width>475</width>
            <height>275</height>
            <onup>3</onup>
            <ondown>3</ondown>
            <onleft>5</onleft>
            <onright>61</onright>
            <pagecontrol>61</pagecontrol>
            <scrolltime>200</scrolltime>
            <animation effect="slide" start="0,0" end="10,0" time="0" condition="!Control.IsVisible(61)">Conditional</animation>
            <itemlayout height="46" width="550">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>450</width>
                    <height>40</height>
                    <texture border="5">button-nofocus.png</texture>
                </control>
                <control type="label">
                    <posx>20</posx>
                    <posy>0</posy>
                    <width>425</width>
                    <height>40</height>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <selectedcolor>selected</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>
            <focusedlayout height="46" width="550">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>450</width>
                    <height>40</height>
                    <texture border="5">button-nofocus.png</texture>
                    <visible>!Control.HasFocus(3)</visible>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>450</width>
                    <height>40</height>
                    <texture border="5">button-focus2.png</texture>
                    <visible>Control.HasFocus(3)</visible>
                </control>
                <control type="label">
                    <posx>20</posx>
                    <posy>0</posy>
                    <width>425</width>
                    <height>40</height>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <selectedcolor>selected</selectedcolor>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </focusedlayout>
        </control>
        <control type="scrollbar" id="61">
			<posx>954</posx>
			<posy>60</posy>
			<width>25</width>
			<height>278</height>
			<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
			<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
			<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>ScrollBarNib.png</textureslidernib>
			<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
			<onleft>3</onleft>
			<onright>3</onright>
			<ondown>61</ondown>
			<onup>61</onup>
			<showonepage>true</showonepage>
			<orientation>vertical</orientation>
		</control>
    </controls>
</window>
